@page "/categories/{Id}"
@using ProjectModels
@using BlazorBusiness.Repository.IRepository
@inject IProductRepository _productRepository
@inject NavigationManager _NavigationManager;

<h3>Update product</h3>

<div class="mt-3 bg-light p-3 border-1 border">
        
    <EditForm Model="_product" OnValidSubmit="UpdateProduct">
        <DataAnnotationsValidator/> 
        <div class="form">
            <div class="row mb-3">
                <label class="form-label col-sm-4" for="name"> Product Name</label>
                <div class="col-sm-8">
                    <input class="form-control" id="name" type="text" @bind="_product.Name"
                           aria-describedby="nameHelp"
                           placeholder="Product Name" @bind:event="oninput">
                    <div id="nameHelp" class="form-text col-sm-8">Enter the product name</div>
                    <ValidationMessage For="() => _product.Name"/>
                </div>
            </div>
            <button class="btn btn-success"> Update</button>
        </div>
    </EditForm>
</div>

@code {
    
    [Parameter]
    public string Id { get; set; }
    
    private ProductDTO _product = new();

    protected override async void OnInitialized()
    { 
        _product = await _productRepository.Get(Convert.ToInt32(Id)); 
    }

    public void UpdateProduct()
    {
        _productRepository.Update(_product);
        _NavigationManager.NavigateTo("/categories");
    }

}